[Unit]
Description=Chromecast Episode Player Controller
Requires=chromecastEpisodes_heartbeat.service
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/opt/Chromecast-Episode-Player/scripts/controller.sh
Restart=always
RestartSec=5


[Install]
WantedBy=multi-user.target


